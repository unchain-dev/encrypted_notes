{
  "name": "encrypted_notes_frontend",
  "version": "0.2.0",
  "description": "Internet Computer starter application",
  "keywords": [
    "Internet Computer",
    "Motoko",
    "JavaScript",
    "Canister"
  ],
  "scripts": {
    "build": "webpack",
    "prebuild": "dfx generate",
    "start": "webpack serve --mode development --env development",
    "deploy:local": "dfx deploy --network=local",
    "deploy:ic": "dfx deploy --network=ic",
    "generate": "dfx generate encrypted_notes_backend",
    "fmt:check": "cargo fmt --check",
    "fmt": "cargo fmt",
    "clippy": "cargo clippy",
    "clippy:fix": "cargo clippy --fix",
    "prettier:check": "prettier --check --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .prettierignore .",
    "prettier": "prettier --write --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .prettierignore .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "bash ./scripts/test.sh"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.7.1",
    "@dfinity/agent": "^0.18.0",
    "@dfinity/auth-client": "^0.18.0",
    "@dfinity/candid": "^0.18.0",
    "@dfinity/principal": "^0.18.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.12.17",
    "idb": "^7.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-router-dom": "^6.14.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "assert": "2.0.0",
    "buffer": "6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.45.0",
    "events": "3.3.0",
    "html-webpack-plugin": "5.5.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "process": "0.11.10",
    "simple-git-hooks": "^2.8.1",
    "stream-browserify": "3.0.0",
    "terser-webpack-plugin": "^5.3.3",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "util": "0.12.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.8.1"
  },
  "engines": {
    "node": "^12 || ^14 || ^16 || ^18"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version",
    "last 2 edge version"
  ]
}
